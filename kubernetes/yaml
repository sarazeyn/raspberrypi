apiVersion: apps/v1
kind: Deployment
metadata:
  name: seneca-iot-deployment
spec:
  selector:
    matchLabels:
      app: iot
  replicas: 1
  template:
    metadata:
      labels:
        app: iot
    spec:
      hostNetwork: true  # remove this if you don't need host networking
      containers:
      - name: iot
        image: saraz84/seneca-iot-tml-kafka-amd64_modification:newtag
        ports:
        - containerPort: 9005
          hostPort: 9005
